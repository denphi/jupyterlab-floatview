{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "skipLibCheck": true,
        "outDir": "./lib",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/*"
    ]
}